    <section>
        <div class="addform">
            <form action='/uploadPhoto' method="post" enctype="multipart/form-data">
                <h2>Add Friend</h2>
                <h3>{{msg}}</h3>
                <img class="add" src={{path}} alt="Friend">
                <input type='file' name='img' id="" required>
                <input type="submit" value="upload image">
            </form>
            <form action='/addFrnd' method="post">
                <input type='text' name='frndName' placeholder="Enter Name" required>
                <input type="submit" value="Add Member">
            </form>
        </div>
    </section>
    <footer></footer>
</body>
